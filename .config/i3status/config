general {
	output_format = "i3bar"
	colors = true
	interval = 5
}

order += "wireless _first_"
order += "ethernet _first_"
order += "volume master"
order += "battery all"
order += "disk /"
order += "cpu_usage"
order += "cpu_temperature all"
order += "memory"
order += "time"

wireless _first_ {
	format_up = "W: %ip (%bitrate at %essid)"
	format_down = ""
}

ethernet _first_ {
	format_up = "E: %ip (%speed)"
	format_down = ""
}

volume master {
	format = "VOL %volume"
	format_muted = "MUT %volume"
}

battery all {
	format = "%status %percentage (%remaining)"
	format_down = ""
	format_percentage = "%.00f%s"
	low_threshold = 20
	threshold_type = percentage
}

disk "/" {
	format = "%avail"
}

cpu_usage {
	format = "%usage"
	max_threshold = 75
	degraded_threshold = 25
}

cpu_temperature all {
	format = "%degreesÂ°C"
}

memory {
	format = "%used / %total"
	threshold_degraded = "1G"
	format_degraded = "MEMORY < %available"
}

time {
	format = "%d.%m.%Y %H:%M:%S"
}
