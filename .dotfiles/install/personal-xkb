hidden partial modifier_keys
xkb_symbols "basic" {

	include "us(dvorak)"
	name[Group1] = "Dvorak (customized)";

	key <CAPS> { [ Control_L ] };
	modifier_map Control { <CAPS> };

	key <ESC> { [ Caps_Lock ] };

	replace key <LCTL> { [ Escape ] };

	replace key <LALT> { [ Shift_L ] };
	replace key <LFSH> { [ Alt_L ] };

	replace key <BKSP> { [ Shift_R ] };
	replace key <RTSH> { [ BackSpace ] };
};
